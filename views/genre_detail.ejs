<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head.ejs'); %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar.ejs') %></div>
        <div class="col-sm-10">
          <h1><%= genre.name %></h1>
          <div style="margin-left: 20px; margin-top: 20px"></div>
          <h4>Books</h4>
          <dl>
            <% if(genre_books.length) { %>
            <% genre_books.forEach((book) => { %> 
              <%- include('./partials/genre_book',{book: book}); %> 
              <% }); %>
            <% } else { %>
              <p>This genre has no books</p>
            <% } %>
          </dl>
          
        </div>
      </div>
    </div>
  </body>
</html>
